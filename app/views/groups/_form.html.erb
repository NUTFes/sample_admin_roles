<%= simple_form_for(@group) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.association :group_category %>
    <%= f.association :user %>
    <%= f.input :activity %>
    <%= f.input :first_question %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
