<%= simple_form_for @group, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.hidden_field :user_id, value: @group[:user_id] %>
  <%= f.input :name,
    hint: t(".hint_name")
  %>
  <%= error_span(@group[:name]) %>
  <%= f.association :group_category %>
  <%= error_span(@group[:group_category_id]) %>
  <%= f.input :activity,
    hint: t(".hint_activity")
  %>
  <%= error_span(@group[:activity]) %>
  <%= f.input :first_question,
    hint: t(".hint_questions")
  %>
  <%= error_span(@group[:first_question]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                groups_path, :class => 'btn btn-default' %>
<% end %>
