<%= simple_form_for @user_detail, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.association :user, label_method: :email %>
  <%= error_span(@user_detail[:user]) %>
  <%= f.input :name_ja %>
  <%= error_span(@user_detail[:name_ja]) %>
  <%= f.input :name_en %>
  <%= error_span(@user_detail[:name_en]) %>
  <%= f.association :department, label_method: :name_ja %>
  <%= error_span(@user_detail[:department]) %>
  <%= f.association :grade, label_method: :name %>
  <%= error_span(@user_detail[:grade]) %>
  <%= f.input :tel %>
  <%= error_span(@user_detail[:tel]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                user_details_path, :class => 'btn btn-default' %>
<% end %>
